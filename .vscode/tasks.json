{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["all"]
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["clean"]
        },
        {
            "label": "STflash",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["flash"],
            "dependsOn":["Build clean", "Build all"],
            "dependsOrder": "sequence"
        }
    ]
}