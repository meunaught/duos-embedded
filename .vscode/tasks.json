// Name these taks the way you want
// Configure command in make to use desired amount of threads (now 4)
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
        },
        {
            "label": "STflash",
            "group": {
                "kind": "build",
                "isDefault":true
            },
            "type": "shell",
            "command": "make",
            "args": ["flash"],
            "dependsOn":["Build clean", "Build all"],
            "dependsOrder": "sequence",
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}